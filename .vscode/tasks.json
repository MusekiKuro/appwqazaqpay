{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Android: Build Debug APK",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew.bat",
            "args": [
                "assembleDebug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Android: Install Debug APK",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew.bat",
            "args": [
                "installDebug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Android: Run on Emulator",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew.bat",
            "args": [
                "installDebug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "dependsOn": "Android: Install Debug APK"
        },
        {
            "label": "Android: Build, Install & Run",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew.bat",
            "args": [
                "installDebug"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Android: Build Debug APK",
                "Android: Install Debug APK",
                "Android: Start Activity"
            ]
        },
        {
            "label": "Android: Start Activity",
            "type": "shell",
            "command": "adb",
            "args": [
                "shell",
                "am",
                "start",
                "-n",
                "com.example.qazaqpaybank/.MainActivity"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Android: Clean Build",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew.bat",
            "args": [
                "clean"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}

